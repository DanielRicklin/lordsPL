{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="container">
    {{ form_start(form) }}
        {{ form_row(form.email, {'attr': {'autofocus': 'true', 'placeholder': 'john.doe@email.fr'}, 'label': 'Adresse email'}) }}
        {{ form_row(form.plainPassword.first, {'label': 'Mot de passe'}) }}
        {{ form_row(form.plainPassword.second, {'label': 'Confirmation du mot de passe'}) }}

        <button class="btn btn-lg btn-primary" type="submit">S'inscrire !</button>
    {{ form_end(form) }}
</div>
{% endblock %}
