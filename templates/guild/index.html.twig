{% block body %}
    {% if editMode %}
        <h1>Modification de la guilde</h1>
    {% else %}
        <h1>Cr√©ation de la guilde</h1>
    {% endif %}

    {{ form_start(form) }}

    {{ form_row(form.name, {'attr': {'placeholder': 'Ponies of love'}, 'label': 'Nom de la guilde'}) }}
